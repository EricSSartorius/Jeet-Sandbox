@import 'typographic'
@import 'styl/*' 
@import 'nib'
@import 'jeet'

normalize-base()
normalize-html5()
//edit()
 
*
	margin 0
	padding 0
	box-sizing border-box
	font-family $futura

html
	background grey
	
.logo
	margin-top -30px
	&:hover
		g
			opacity 0.7
			transition(all, .4s, ease)
	
#nav
	margin-top 20px
	
#header
	margin-bottom 30px
	background darkblue
	#lang
		>div
			a 
				span(1/3)
				font-size 0.7em
				text-align center
				background rgba(white, 0.15)
				padding 10px 0
				color grey
				text-decoration none
				&:hover 
					border-bottom 3px solid white
					margin-bottom -3px
		col(3/24, offset: 21/24)
		+below('md')
			col(5/24, offset: 19/24)	
	.head
		cf()
		.title
			col(1/6)
			+below('md')
				col(1/4)
				text-align center
				padding-right 30px	
			padding-left 30px
			color white	
		#nav	
		>div
			col(2/6, offset: 3/6)
			+below('md')
				center()
				col(3/4)
		a
			span(1/3)
			padding 15px 0
			text-align center
			text-decoration none
			color #fff
			&:hover
				opacity 0.7
				transition(all, .1s, ease)
	
#main
	cf()
	padding 0 10px
	
aside	
	col(1/3)
	shift(2/3)
	+below('sm')
		stack()
		unshift()
		text-align center
	.nav2
		margin-bottom 1rem
		a
			display block
			background blue
			color white
			text-decoration none
			padding 1em 
			border-bottom 1px solid darken(#0a2334, 5%)
			&:hover
				background  lighten(blue, 5%)
	.social
		a
			span(1/3)
			text-align center
			padding 30px 0
			color blue
			&:hover
				color lighten(blue, 20%)
				transition(all, .2s, ease)

.posts
	col(2/3)
	shift(-1/3)
	+below('sm')
		stack()
		unshift()
	.post
		cf()
		background #fff
		border 1px solid grey
		padding .5em
		margin-bottom 1em
		header
			nav
				margin-bottom 10px
				a
					color #65b3ea
					text-decoration none
					&:hover
						text-decoration underline
		> img
			margin-bottom 1em
			col(1/4)
			+below('sm')
				stack()
		> article
			col(3/4)
			+below('sm')
				stack()

.section1
	text-align center
	background blue
	color white
	padding-bottom 30px
	padding-top 30px

.section2
	text-align center
	background white
	color blue
	padding-bottom 30px
	padding-top 30px		
	
.footer
	text-align center
	background darkblue
	color white
	padding-bottom 30px
	padding-top 30px