@import 'typographic'
@import 'styl/*' 
@import 'nib'
@import 'jeet'

normalize-base()
normalize-html5()
//edit()
typographic()
 
*
	margin 0
	padding 0
	box-sizing border-box
	font-family $segoe

html
	background grey
	
.logo
	margin-top -30px
	fill blue2
	&:hover
		fill white
		transition(all, .2s, ease)
	
#nav
	margin-top 20px
	
#header
	background darkblue
	#lang
		>div
			a 
				span(1/3)
				font-size 0.7em
				text-align center
				background rgba(white, 0.15)
				padding 10px 0
				color grey
				text-decoration none
				&:hover 
					border-bottom 3px solid white
					margin-bottom -3px
		col(3/24, offset: 21/24)
		+below('md')
			col(5/24, offset: 19/24)	
	.head
		cf()
		.title
			col(1/6)
			+below('md')
				col(1/4)
				text-align center
				padding-right 30px	
			padding-left 30px
			color white	
		#nav	
		>div
			col(2/6, offset: 3/6)
			+below('md')
				center()
				col(3/4)
		a
			span(1/3)
			padding 15px 0
			text-align center
			text-decoration none
			color #fff
			&:hover
				color blue2
				transition(all, .1s, ease)
				
#nav2
	background blue2
	margin-bottom 30px 
	> div
		center(1050px)
		padding 0 
		border-right 1px solid lighten(blue2, 5%)
		border-left 1px solid darken(blue2, 10%)
		margin-bottom 0
	a
		span(1/6)
		+below('md')
			stack()
			border-bottom 1px solid lighten(blue2, 5%)
			border-top 1px solid darken(blue2, 10%)
		padding 15px 0
		text-align center
		text-decoration none
		color #fff
		border-left 1px solid lighten(blue2, 5%)
		border-right 1px solid darken(blue2, 10%)
		&:hover
			background  lighten(blue2, 5%)
	
#blog
	cf()
	padding 75px 10px
	
aside	
	col(1/3)
	shift(2/3)
	+below('sm')
		stack()
		unshift()
		text-align center
	.nav3
		margin-bottom 1rem
		a
			display block
			background blue
			color white
			text-decoration none
			padding 1em 
			border-bottom 1px solid darken(#0a2334, 5%)
			&:hover
				background  lighten(blue, 5%)
	.social
		a
			span(1/3)
			text-align center
			padding 30px 0
			color blue2			
			&:hover
				color darkblue
				transition(all, .2s, ease)

.posts
	col(2/3)
	shift(-1/3)
	+below('sm')
		stack()
		unshift()
	.post
		cf()
		background #fff
		border 1px solid grey
		padding .5em
		margin-bottom 1em
		header
			nav
				margin-bottom 10px
				a
					color blue2
					text-decoration none
					&:hover
						text-decoration underline
		> img
			margin-bottom 1em
			col(1/4)
			+below('sm')
				stack()
		> article
			col(3/4)
			+below('sm')
				stack()
				
#about
	text-align center
	background white
	color blue
	padding-bottom 75px
	padding-top 75px	

#work
	text-align center
	background blue2
	color white
	padding-bottom 75px
	padding-top 75px

#contact
	text-align center
	background white
	color blue
	padding-bottom 75px
	padding-top 75px		
	a
		text-align center
		&:hover
			opacity 0.8
		#facebook
			color #3B5998
		#twitter
			color #00A5E5
		#github
			color #333

.footer
	text-align center
	background darkblue
	color white
	padding-bottom 75px
	padding-top 75px