@import 'typographic'
@import 'styl/*' 
@import 'nib'
@import 'jeet'

normalize-base()
normalize-html5()
//edit()
typographic()
 
*
	margin 0
	padding 0
	box-sizing border-box
	font-family 'Lato', sans-serif;

h1
	font-family: 'Lato', sans-serif;

html
	background grey
	
.logo
	margin-top 10px
	fill blue2
	&:hover
		fill white
		transition(all, .2s, ease)
	
#header
	background darkblue
	border-bottom solid 5px blue2
	.head
		cf()
		.title
			col(1/2)
			+below('md')
				stack()
				text-align center
				padding-right 30px	
			padding-left 30px
			color white	
		.menu
			col(1/2)
			+below('md')
				col()
			#lang
				col(3/12, offset: 9/12)
				+below('md')
					stack()
				>div
					a 
						span(1/3)
						font-size 0.7em
						text-align center
						background rgba(white, 0.15)
						padding 10px 0
						color grey
						text-decoration none
						&:hover 
							border-bottom 3px solid white
							margin-bottom -3px
			#nav
				stack()
				>div
					a
						span(1/3)
						padding 15px 0
						text-align center
						text-decoration none
						color #fff
						&:hover
							color blue2
							transition(all, .1s, ease)
				
#about
	text-align center
	background white
	color blue
	padding-bottom 75px
	padding-top 75px	

#work
	text-align center
	background blue2
	color white
	padding-bottom 75px
	padding-top 75px

#contact
	text-align center
	background white
	color blue
	padding-bottom 75px
	padding-top 75px		
	a
		text-align center
		&:hover
			opacity 0.8
		#facebook
			color #3B5998
		#twitter
			color #00A5E5
		#github
			color #333

.footer
	text-align center
	background darkblue
	color white
	padding-bottom 75px
	padding-top 75px