@import 'typographic'
@import 'styl/*' 
@import 'nib'
@import 'jeet'

normalize-base()
normalize-html5()
//edit()
 
*
	margin 0
	padding 0
	box-sizing border-box
	font-family $futura

html
	background #f2f2f2
	
#header
	padding-bottom 30px
	background darkblue
	> div
		center(1050px)
	.logo1
		padding-left 10px
		margin-top 30px
		col(6/24)
		+below('md')
			stack()
			text-align center
	form
		col(8/24, offset: 10/24)
		+below('md')
			stack()
			padding-left 10px
		padding-right 10px
		margin-top 30px
		input
			col(18/24)
			padding 10px
			border-radius(5px)
		button
			col(6/24)
			padding 10px 0
			color white
			border-radius(5px)
			text-align center
			background #c5a536
			&:hover 
				background lighten(#c5a536, 10%)
			
#nav
	background #1b4662
	margin-bottom 30px 
	> div
		center(1050px)
		padding 0 
		border-right 1px solid lighten(#1b4662, 5%)
		border-left 1px solid darken(#1b4662, 10%)
		margin-bottom 0
	a
		span(1/6)
		+below('md')
			stack()
			border-bottom 1px solid lighten(#1b4662, 5%)
			border-top 1px solid darken(#1b4662, 10%)
		padding 15px 0
		text-align center
		text-decoration none
		color #fff
		border-left 1px solid lighten(#1b4662, 5%)
		border-right 1px solid darken(#1b4662, 10%)
		&:hover
			background  lighten(#1b4662, 5%)

#main
	center(1050px)
	padding 0 10px
	
aside	
	col(1/3)
	shift(2/3)
	+below('sm')
		stack()
		unshift()
		text-align center
	.nav2
		margin-bottom 1rem
		a
			display block
			background blue
			color white
			text-decoration none
			padding 1em 
			border-bottom 1px solid darken(#0a2334, 5%)
			&:hover
				background  lighten(blue, 5%)
	.social
		a
			span(1/3)
			text-align center
			text-decoration none
			font-weight bold
			background #fff
			padding 30px 0
			border 1px solid #ddd
			border-right 0
			color blue
			&:last-child
				border-right  1px solid #ddd  
			&:hover
				background darken(#fff, 20%)
				color white

.posts
	col(2/3)
	shift(-1/3)
	+below('sm')
		stack()
		unshift()
	.post
		cf()
		background #fff
		border 1px solid #ddd
		padding .5em
		margin-bottom 1em
		header
			nav
				margin-bottom 10px
				a
					color #65b3ea
					text-decoration none
					&:hover
						text-decoration underline
		> img
			margin-bottom 1em
			col(1/4)
			+below('sm')
				stack()
		> article
			col(3/4)
			+below('sm')
				stack()
			
.logo
	display block
	
.footer
	text-align center
	background darkblue
	color white
	padding-bottom 30px
	padding-top 30px