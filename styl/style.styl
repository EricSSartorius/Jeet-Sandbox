#work
	cf()
	stack()
	h1
		color white
		text-align center
	background blue
	section-padding()
	.gallery
		>img
			span(1/4, cycle: 4)
			padding 10px
			+below('md')
				span(1/2, uncycle: 4, cycle: 2)
			+below('sm')
				span(1, uncycle: 2, cycle 1)

#resume
	stack()
	h1
		color blue
	text-align center
	background white
	section-padding()

#contact
	stack()
	h1
		color blue
	h4
		color blue
	text-align center
	background grey
	section-padding()
	.fa-stack
		padding 0 50px		
	a
		text-align center
		&:hover
			opacity 0.8
		#facebook
			color #3B5998
		#twitter
			color #00A5E5
		#github
			color #333

.footer
	stack()
	text-align center
	background darkblue
	color white
	section-padding()