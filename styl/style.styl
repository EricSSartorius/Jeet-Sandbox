@import 'typographic'
// @import '**' 
@import 'nib'
@import 'jeet'


// Mixins
vendor(property, arg)
	{property} arg
	-webkit-{property} arg
	-moz-{property} arg

border-radius(radius = 5px)
	vendor('border-radius', radius)

transition(args)
	vendor('transition', args)
	
section-padding()
	padding-top 100px
	padding-bottom 100px	


// Variables
darkblue = #0a2334
blue= lighten(#1b4662, 20%)
red = #BE2525
grey = #E8E8E8


// Scale
rupture.scale = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 'sm' 'md' 'lg' 'xl' 'hd'

normalize-base()
normalize-html5()
//edit()
typographic()
 
*
	margin 0
	padding 0
	box-sizing border-box
	font-family 'Lato', sans-serif

h1, h4
	font-family 'Lato', sans-serif

html
	background red
	

#top-menu
    position fixed
    z-inde: 1
    background darkblue
    left 0
    right 0
    top 0

#top-menu 
	.logo, a 
		transition(all, .5s, ease-out)
	
.logo
	margin-top 10px
	fill blue
	&:hover
		fill white
	
#header
	stack()
	background darkblue
	#top-menu
		cf()
		.title
			col(1/3)
			+below('md')
				stack()
				text-align center
				padding-right 30px	
			padding-left 30px
			color white	
		.menu
			col(1/3, offset: 1/3)
			+below('md')
				col()
			#nav
				stack()
				>div
					a
						span(1/4)
						padding 15px 30px 15px 0
						text-align center
						text-decoration none
						color #fff
						&:hover
							color blue
			
#about
	stack()
	cf()
	h1
		text-align center
		color blue
	>div
		p
			col(1/3)
			color blue	
	background grey
	section-padding()
	padding-left 30px
	padding-right 30px
	#lang
		col(1/3, offset: 1/3)
		>div
			p 
				span(1/3)
				font-size 0.7em
				text-align center
				padding 10px 0
				color darkblue
				text-decoration none
				&:hover 
					border-bottom 2px solid darkblue
					margin-bottom -2px
					transition(all, .2s, ease-out)
					
.language1
	display block

.language
    display none

